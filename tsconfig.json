{
  "extends": "./tsconfig.base.json",
  "exclude": ["node_modules/**"],
  "include": ["src", "test"],
  "compilerOptions": {
    "types": ["jest"],
    "typeRoots": [
      "node_modules/@types",
      "@types",
      "node",
      "types"
    ],
    "rootDirs": ["src", "test"],
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@waf/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  }
}
